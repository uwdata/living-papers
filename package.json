{
  "name": "living-papers-testbed",
  "license": "BSD-3-Clause",
  "description": "Testbed for Living Papers development.",
  "main": "src/index.js",
  "module": "src/index..js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint '**/*.js'",
    "lint:lit-analyzer": "lit-analyzer src/components/observable-cell.js",
    "analyze": "cem analyze --litelement --globs \"**/*.js\" --exclude docs",
    "analyze:watch": "cem analyze --litelement --globs \"**/*.js\" --exclude docs --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "mocha --timeout 10000 'test/**/*-test.js'",
    "prepublishOnly": "rimraf dist && npm run test & npm run lint"
  },
  "dependencies": {
    "@observablehq/parser": "^6.0.0",
    "@observablehq/runtime": "^4.19.0",
    "citation-js": "^0.5.7",
    "d3-require": "^1.2.4",
    "lit": "^2.2.3",
    "node-fetch": "^3.2.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@esm-bundle/chai": "^4.1.5",
    "@open-wc/testing": "^3.0.0-next.1",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/mocha": "^9.0.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-legacy": "^0.1.4",
    "@web/dev-server-rollup": "^0.3.9",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-mocha": "^0.7.4",
    "@web/test-runner-playwright": "^0.8.4",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^5.0.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^9.1.1",
    "mustache": "^4.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.1"
  }
}
